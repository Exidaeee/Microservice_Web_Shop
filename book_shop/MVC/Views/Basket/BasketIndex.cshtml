@model BasketDto

<h1>Кошик</h1>

@if (Model != null && Model.Items != null && Model.Items.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Ціна</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>@item.Product.Price грн</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <div class="col-12 col-md-6 pb-1 ">
            <a asp-controller="Order" asp-action="Index" class="btn btn-primary btn-square form-control btn-lg " style="height:50px;">Оформити замовлення</a>
        </div>
        <div class="col-12 col-md-6 pb-1 ">
         <a asp-controller="Basket"  asp-action="DeleteBasket" class="btn btn-outline-danger btn-square form-control btn-lg" style="height:50px;">Очистити кошик</a>
        </div>
     
    </div>
}
else
{
    <p>Ваш кошик порожній.</p>
}

