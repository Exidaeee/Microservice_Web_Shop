@model ProductDto

<form method="post">
  <input asp-for="@Model.Id" hidden />
  <div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p class="text-secondary">@Model.Author</p>
            <p class="text-primary">@Model.Price грн</p>
            <p class="font-weight-bold">Жанр: @Model.CategoryName</p>
            <p>@Model.Description</p>
            <div class="col-12 col-md-6 pb-1 ">
                    <a asp-controller="Basket" asp-route-id="@Model.Id" asp-action="AddToBasket" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Додати до кошика</a>
            </div>
             <div class="col-12 col-md-6 pb-1 ">
                   <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">На головну </a>
             </div>
        </div>
    </div>
  </div>
</form>
