@model RegistrationRequestDto

<form method ="post" asp-action="Register">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Реєстрація</h1>
        </div>

        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Ім'я користувача..." />
                <span asp-validation-for="Name" class="text-danger"/>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Електронна адреса..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Phone" class="form-control" placeholder="Номер телефону..." />
                <span asp-validation-for="Phone" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Пароль..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class=" form-control btn btn-success" value="Submit">Зареєструватися</button>
            </div>
        </div>
    </div>
</form>
